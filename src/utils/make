#!/usr/bin/make -f

# < Configuration >
CC=gcc -Wall -Wextra -std=gnu11 -Isrc/utils

# < Main targets >
all: obj/utils/associative_array.o obj/utils/tracing_utils.o obj/utils/die.o

help:
	@echo "Do not call this make directly"
	@echo "Use ./build in project root"

.PHONY: all help
.DEFAULT: all

# < Targets >
# rebuild everything if src/utils changes
obj/utils/associative_array.o: src/utils/
	${CC} -c src/utils/associative_array.c -o obj/utils/associative_array.o
obj/utils/tracing_utils.o: src/utils/
	${CC} -c src/utils/tracing_utils.c -o obj/utils/tracing_utils.o
obj/utils/die.o: src/utils
	${CC} -c src/utils/die.c -o obj/utils/die.o
